<div class="row" style="width:100%">
    {{> admin/adminSidebar }}
    <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Products</li>
            </ol>
        </nav>
        <div class="row">
            <h1 class="text-success text-center">
                ProductList
            </h1>
            <br><br>
            <div class="container">
                <table class="table table-striped table-hover table-responsive">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">title</th>
                            <th scope="col">status</th>
                            <th scope="col">category</th>
                            <th scope="col">description</th>
                            <th scope="col">price</th>
                            <th scope="col">thumbnail</th>
                            <th scope="col">code</th>
                            <th scope="col">stock</th>
                            <th scope="col" colspan="2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each productList}}
                        <tr id="producto-{{_id}}">
                            <td class="title">{{title}}</td>
                            <th class="status">{{status}}</th>
                            <td class="category">{{category}}</td>
                            <td class="description">{{description}}</td>
                            <td class="price">{{price}}</td>
                            <td class="thumbnail"><img src="/img/fff.png" alt="img" width="50" height="50"></td>
                            <td class="code">{{code}}</td>
                            <td class="stock">{{stock}}</td>
                            <td>
                                <a href="#" onclick="mostrarFormularioActualizarProducto('{{_id}}')"
                                    class="btn btn-sm btn-primary"><span class="fa fa-edit"></span></a>
                            </td>
                            <td>
                                <a href="#" onclick="eliminarProducto('{{_id}}')" class="btn btn-sm btn-danger"><i
                                        class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <nav class="pagination-outer" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{prevPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{/if}}


                    {{#each pages}}
                    <li class="page-item {{#if (eq ../page this)}}active{{/if}}">
                        <a class="page-link"
                            href="?{{#if ../currentQuery.category}}category={{../currentQuery.category}}&{{/if}}{{#if ../sort}}sort={{../sort}}&{{/if}}page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}


                    {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </main>
</div>



