<div class="row" style="width:100%">
    {{> admin/adminSidebar }}
    <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Orders</li>
            </ol>
        </nav>
        <div class="row">
            <h1 class="text-success text-center">
                Orders List
            </h1>
            <br><br>
            <div class="container">
                <table class="table table-striped table-hover table-responsive">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Code</th>
                            <th scope="col">Purchase_datetime</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Purchaser</th>
                            <th scope="col" colspan="2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ordersList}}
                        <tr id="ticket-{{_id}}">
                            <td class="id">{{_id}}</td>
                            <td class="code">{{code}}</td>
                            <th class="purchase_datetime">{{purchase_datetime}}</th>
                            <td class="amount">${{amount}}</td>
                            <td class="purchaser">{{purchaser}}</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary" disabled><span class="fa fa-edit"></span></button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-danger" disabled><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
