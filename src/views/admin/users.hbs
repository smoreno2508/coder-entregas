<div class="row" style="width:100%">
    {{> admin/adminSidebar }}
    <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">User</li>
            </ol>
        </nav>
        <div class="row">
            <h1 class="text-success text-center">
                UserList
            </h1>
            <br><br>
            <div class="container">
                <table class="table table-striped table-hover table-responsive">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Id Cart</th>
                            <th scope="col">Role</th>
                            <th scope="col">Github Account</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each userList}}
                        <tr>
                            <th scope="row">{{_id}}</th>
                            <td>{{firstName}} {{lastName}}</td>
                            <td>{{email}}</td>
                            <td>{{cartId}}</td>
                            <td>{{role}}</td>
                            <td>{{isGithub}}</td>
                            <td><a href="#" class="btn btn-sm btn-primary">View</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <nav class="pagination-outer" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{prevPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{/if}}


                    {{#each pages}}
                    <li class="page-item {{#if (eq ../page this)}}active{{/if}}">
                        <a class="page-link"
                            href="?{{#if ../currentQuery.category}}category={{../currentQuery.category}}&{{/if}}{{#if ../sort}}sort={{../sort}}&{{/if}}page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}


                    {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </main>
</div>



